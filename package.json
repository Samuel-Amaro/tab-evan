{
	"name": "tab-evan",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && vite dev",
		"build": "vite build",
		"preview": "npm run services:up && npm run services:wait:database && npm run migrations:up && vite preview",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:watch": "vitest watch --no-file-parallelism",
		"lint:prettier:check": "prettier --check .",
		"lint:prettier:fix": "prettier --write .",
		"lint:eslint:check": "eslint .",
		"lint:eslint:fix": "eslint --fix .",
		"services:up": "docker compose -f compose.yaml up -d",
		"services:stop": "docker compose -f compose.yaml stop",
		"services:down": "docker compose -f compose.yaml down",
		"services:wait:database": "node src/infra/scripts/wait-for-postgres.js",
		"migrations:create": "node-pg-migrate -m src/infra/migrations create",
		"migrations:up": "node-pg-migrate -m src/infra/migrations --envPath .env.development up",
		"posttest": "npm run services:stop",
		"test": "npm run services:up && concurrently -n vite,vitest -k -s command-vitest \"vite dev\" \"wait-on .svelte-kit/tsconfig.json && vitest --no-file-parallelism\"",
		"commit": "cz",
		"secretlint": "npx secretlint \"**/*\""
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.0",
		"@commitlint/config-conventional": "^19.8.0",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@secretlint/secretlint-rule-preset-recommend": "^9.3.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.20.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/node": "^22.14.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"jsdom": "^26.0.0",
		"node-pg-migrate": "^7.9.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"secretlint": "^9.3.1",
		"svelte": "^5.28.1",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.5",
		"vite-plugin-static-copy": "^2.3.1",
		"vitest": "^3.1.1",
		"wait-on": "^8.0.3"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"@sveltejs/adapter-vercel": "^5.7.0",
		"@tanstack/svelte-query": "^5.74.3",
		"@tanstack/svelte-query-devtools": "^5.74.3",
		"@types/async-retry": "^1.4.9",
		"@types/pg": "^8.11.11",
		"async-retry": "^1.3.3",
		"commitizen": "^4.3.1",
		"concurrently": "^9.1.2",
		"conventional-changelog": "^6.0.0",
		"dotenv": "^16.4.7",
		"dotenv-expand": "^12.0.1",
		"pg": "^8.14.1",
		"uuid": "^11.1.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,css,scss,md,html}": [
			"prettier --write"
		],
		".css": "stylehint",
		".svelte": "npm run check"
	}
}
